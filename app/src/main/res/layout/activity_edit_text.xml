<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#95CAE4"
    tools:context="com.litte.ui.userinterface.EditTextActivity">

    <com.litte.ui.view.MyEditText
        android:id="@+id/username"
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_edittext_selector"
        android:layout_marginRight="50dip"
        android:layout_marginLeft="50dip"
        android:drawableLeft="@drawable/icon_user"
        android:hint="请输入用户名"
        android:textSize="20sp"
        android:inputType="text"
        android:drawableRight="@drawable/clear_selector"/>
    <com.litte.ui.view.MyEditText
        android:id="@+id/password"
        android:layout_below="@+id/username"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_edittext_selector"
        android:layout_marginRight="50dip"
        android:layout_marginLeft="50dip"
        android:drawableLeft="@drawable/account_icon"
        android:hint="请输入密码"
        android:textSize="20sp"
        android:inputType="textPassword"
        android:drawableRight="@drawable/clear_selector"/>
    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_btn_selector"
        android:layout_marginRight="50dip"
        android:layout_marginLeft="50dip"
        android:layout_below="@+id/password"
        android:layout_marginTop="25dp"
        android:text="登录"
        android:textSize="22sp"
        android:textColor="#FFFF"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textPassword"
            android:background="@drawable/login_edittext_selector"/>
        <Button
            android:id="@+id/btn_show_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码可见"/>
    </LinearLayout>
</RelativeLayout>
